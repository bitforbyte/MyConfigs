# General
alias q='exit'
alias c='clear'
alias h='history'
alias cs='clear;ls --color'
alias ls='ls -laXr --color'
#alias lsa='ls -laXr --color'
alias null='/dev/null'

# Directories
alias home='cd ~'
alias dtop='cd ~/Desktop'
alias gdrive='cd ~/Google\ Drive'
alias cppproj='cd ~/Google\ Drive/Projects/C++_Projects'
alias cproj='cd ~/Google\ Drive/Projects/C_Projects'
alias pyproj='cd ~/Google\ Drive/Projects/Python_Projects'

# Directory Navigation
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..;cd ..;cd ..'

# Docker Aliases
alias docker='sudo docker'
alias docker-compose='sudo docker-compose'
alias dockup='sudo docker-compose up -d --build'
alias dockstop='sudo docker stop $(docker ps -a -q)'
alias dockwipe='sudo docker rm $(docker ps -a -q); sudo docker rmi $(docker images -q)'

# Git
alias g='git'
alias gst='git status'
alias gcom='git commit -m'
alias gclone='git clone'
alias glog='git log'
alias gall='git add .'

# BashFiles for editing
alias rcalias='vi ~/.bashFiles/.bashrc_aliases'
alias rcprof='vi ~/.bashFiles/.bashrc_profile'
alias rctest='vi ~/.bashFiles/.bashrc_test'

# Remove a directory and all files
alias bd='cd $OLDPWD'

# Show open ports
alias openports='netstat -nape --inet'

# Reboot the system safily
alias rebootsafe='sudo shutdown -r now'

# Enable command exclution (Shell exclusion)
alias shex='shopt -s extglob'
# Disable command exclution (Best safe practice right after)
alias noshex='shopt -u extglob'

# Remap all permuates of make
alias akem='make'
alias mkae='make'
alias amke='make'



